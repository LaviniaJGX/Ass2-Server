{
    "apps": {
        "name": "coursestest",                              
        "script": "./bin/www",                     
        "cwd": "./",                                
        "args": "",                                
        "interpreter": "",                         
        "interpreter_args": "",                     
        "watch": true,                              
        "ignore_watch": [                          
            "node_modules",
            "logs"
        ],               
        "instances": 1,                             
        "max_memory_restart": 8,                    
        "error_file": "./logs/app-err.log",         
        "out_file": "./logs/app-out.log",           
        "merge_logs": true,                         
        "log_date_format": "YYYY-MM-DD HH:mm:ss",                        
        "autorestart": true,                       
        "cron_restart": "1 0 * * *",                         
        "restart_delay": 60 ,                    
        "env": {
            "NODE_ENV": "production",               
            "REMOTE_ADDR": ""               
        },
        "env_dev": {
            "NODE_ENV": "development",              
            "REMOTE_ADDR": ""
        },
        "env_test": {                               
            "NODE_ENV": "test",
            "REMOTE_ADDR": ""
        }
    }
  }